<p id="notice"><%= flash[:notice] %></p>
<h1>My Dogs</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Owner</th>
    </tr>
  </thead>
  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.id %></td>
        <td><%= dog.name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.age %></td>
        <td><%= dog.owner.try(:name) %></td>
        <td><%= link_to "Profile", dog_path(dog) %></td>
        <td><%= link_to "Edit", edit_dog_path(dog) %></td>
        <td><%= link_to "Delete",
                        dog,
                        method: :delete,
                        data: { confirm: "Are your sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add A New Dog", new_dog_path %>